{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2021",
    "esModuleInterop": true,
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "sourceMap": false
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/__test__/*", "**/__mocks__/*"]
}
